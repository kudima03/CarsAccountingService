@model CarViewModel

@{
    var action = Model.Id == 0 ? "CreateCar" : "UpdateCar";
}
<body>

<form asp-controller="Cars" asp-action="@action" method="post">

    <div class="form-group" hidden="hidden">
        <input type="number" asp-for="Id" value="@Model.Id"/>
    </div>

    <div class="form-group">
        <label asp-for="Model">Модель:</label>
        <input type="text" asp-for="Model" size="50" required class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer">Производитель:</label>
        <input type="text" asp-for="Manufacturer" size="50" required class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="YearOfManufacture">Год выпуска:</label>
        <input type="number" asp-for="YearOfManufacture" size="50" required class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="RegistrationNumber">Регистрационный номер:</label>
        <input type="text" asp-for="RegistrationNumber" size="50" required class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="VinCode">Номер VIN:</label>
        <input type="text" asp-for="VinCode" size="50" required class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Mileage">Пробег(км):</label>
        <input type="number" asp-for="Mileage" size="50" required class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Colour">Цвет:</label>
        <input type="text" asp-for="Colour" size="50" class="form-control"/>
    </div>

    <input type="submit" name="submit">
</form>
</body>